{
	"update_url" :"http://clients2.google.com/service/update2/crx",
	"name" : "__MSG_extName__",
	"version" : "0.6.40",
	"manifest_version" : 2,
	"description" : "__MSG_extDescription__",
	"homepage_url" : "http://dainiel.github.io/1px/",
	"default_locale" : "en",
	"content_security_policy" : "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",

	"icons" : { 
		"16" : "images/logo/16.png",
	    "48" : "images/logo/48.png",
	    "128" : "images/logo/128.png" 
	},
	"browser_action" : {
		"default_icon" : "images/logo/19.png",
		"default_title" : "__MSG_browserActionTitle__",
		"default_popup" : "app/popup.html"
	},	
	"background" : {
		"scripts" : ["js/module/adapter.js", "js/module/showMsg.js", "js/background.js"],
		"persistent" : false
	},
	"content_scripts": [
		{
		  "matches": ["http://*/*", "https://*/*"],
		  "js": ["js/module/adapter.js", "js/content/loadImage.js"]
		}
	],
	"options_page": "app/option.html",
	"web_accessible_resources": ["images/logo/48.png","css/addImage.css"],

	"permissions" : ["fontSettings","clipboardRead","clipboardWrite","storage","unlimitedStorage","contentSettings","chrome://favicon/","tabs","notifications","cookies","contextMenus","http://*/*","https://*/*","management"]
	
}